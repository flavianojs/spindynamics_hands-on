#------------------------------------------ 
dimensions:system-size-x =  2.0 !nm 
dimensions:system-size-y =  2.0 !nm 
dimensions:system-size-z =  2.0 !nm 
#------------------------------------------ 
# Simulation attributes: 
#------------------------------------------ 
sim:minimum-temperature=0
sim:maximum-temperature=300
